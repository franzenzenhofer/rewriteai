{
  "manifest_version": 2,
  "name": "Franz AI Rewriter",
  "version": "1.0",
  "description": "Rewrite selected text using OpenAI API",
  "permissions": ["activeTab", "contextMenus"],
  "background": {
    "scripts": ["config.js", "background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
